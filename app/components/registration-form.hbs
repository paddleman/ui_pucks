<div class="text-2xl mb-2">
  Registration
</div>
<hr>

<form class="w-full max-w-md mt-4" {{on "submit" this.submitUser}} >
  <div class="md:flex md:items-center mb-2">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" >
        Email:
      </label>
    </div>
    <div class="md:w-2/3">
      <Input class="std-input"  type="text" @value={{this.email}} placeholder="email" />
    </div>
  </div>
    {{#each @errors.email as |error|}}
      <div class="text-sm text-red-500">{{error.message}}  </div> 
    {{/each}}
  <div class="flex justify-center mb-1">
  </div>
 
  <div class="md:flex md:items-center mb-2">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" >
        Username:
      </label>
    </div>
    <div class="md:w-2/3">
      <Input class="std-input"  type="text" @value={{this.username}} placeholder="Username" />
    </div>
  </div>
  <div class="flex justify-center mb-1">
    {{#each @errors.username as |error|}}
      <div class="text-sm text-red-500">{{error.message}}  </div> 
    {{/each}}
  </div>



  <div class="md:flex md:items-center mb-2">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" >
        Password:
      </label>
    </div>
    <div class="md:w-2/3">
      <Input class="std-input"  type="password" @value={{this.password}} placeholder="Password" />
    </div>
  </div>
  <div class="flex justify-center mb-1">
    {{#each @errors.password as |error|}}
      <div class="text-sm text-red-500">{{error.message}}  </div> 
    {{/each}}
  </div>



  <div class="md:flex md:items-center mb-2">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" >
        Password Confirmation:
      </label>
    </div>
    <div class="md:w-2/3">
      <Input class="std-input"  type="password" @value={{this.passwordConfirmation}} placeholder="Password Again" />
    </div>
  </div>
  <div class="flex justify-center mb-1">
    {{#each @errors.passwordConfirmation as |error|}}
      <div class="text-sm text-red-500">{{error.message}}  </div> 
    {{/each}}
  </div>


  <div class="md:flex md:items-center mt-4">
    <div class="md:w-1/3"></div>
    <div class="md:w-2/3">
      <LinkTo class="add-btn mr-1" @route='index'>Cancel </LinkTo> 
      <button class="add-btn" type="submit" >Submit Registration</button>
    </div>
  </div>
</form>